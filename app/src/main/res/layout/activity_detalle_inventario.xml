<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#3098"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Listado de Activos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/editColorWhite"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/tvEtiquetaCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CODIGO:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etCodigoInv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:hint="Ingrese Código Activo"
            android:textSize="16dp"
            android:inputType="phone"
           />
        <Button
            android:id="@+id/btnCodBarra"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:theme="@style/RaisedButtonDark"
            android:background="@drawable/ico_cb"
            android:tooltipText="Escanear codigo de barras"
            />
        <Button
            android:id="@+id/btnAdicionaInventario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:theme="@style/RaisedButtonDark"
            android:background="@drawable/ico_adicionar"
            android:tooltipText="Añadir Activo a la Lista"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/editColorWhite"
        android:layout_marginBottom="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFIC.:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvEdificio"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUNC.:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvFuncionario"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvInventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
