<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.GestionServidorActivity"
    android:background="@color/colorPrimaryLight">

    <include layout="@layout/actionbar_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:padding="@dimen/paddin_horizontal_login"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"

        >

            <ImageView
                android:layout_width="299dp"
                android:layout_height="149dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/visualizacion_datos"
                android:contentDescription="TODO" />


            <Button
                android:id="@+id/getdataserver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_button_getdataserver"
                android:theme="@style/RaisedButtonDark"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:onClick="goShowGetDatServer"
                />


            <ImageView
                android:layout_width="299dp"
                android:layout_height="149dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/actualiza_datos"
                android:layout_marginTop="@dimen/activity_vertical_marginmedio"
                android:contentDescription="TODO" />


            <Button
                android:id="@+id/updatedataserver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_button_updatedataserver"
                android:theme="@style/RaisedButtonDark"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:onClick="goShowUpdateServer"
                />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>